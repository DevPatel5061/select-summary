{
  "name": "Select Summary",
  "description": "Summarize selected text using Gemini AI â€” easy and all for free",
  "version": "2.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "summary.html",
        "summary.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon/icon.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+G",
        "mac": "Alt+G"
      },
      "description": "Open the Select Summary popup in the current tab"
    },
    "summarize-selection": {
      "suggested_key": {
        "default": "Ctrl+Z",
        "mac": "Command+Z"
      },
      "description": "Summarize selected text with AI"
    }
  },
  "icons": {
    "128": "icon/icon.png"
  },
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ]
}